<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jansora.dao.DocDao">
    <resultMap id="DocEntity" type="com.jansora.entity.DocEntity">
        <result property="id" column="id"/>
        <result property="createAt" column="create_at"/>
        <result property="updateAt" column="update_at"/>
        <result property="ownerId" column="owner_id"/>
        <result property="raw" column="raw"/>
    </resultMap>
    <resultMap id="DocEntityList" type="com.jansora.entity.DocEntity">
        <result property="id" column="id"/>
        <result property="createAt" column="create_at"/>
        <result property="updateAt" column="update_at"/>
        <result property="ownerId" column="owner_id"/>
    </resultMap>
    <select id="count" resultType="int">
        SELECT count(1) FROM BLOG_POST_DOC WHERE 1 = 1
        <choose><when test="id != null"> AND id = #{id}</when></choose>
        <choose><when test="ownerId != null"> AND owner_id = #{ownerId}</when></choose>
        <choose><when test="version != null and version != ''"> AND version = #{version}</when></choose>
    </select>
    <select id="find"  resultMap="DocEntityList">
        SELECT * FROM BLOG_POST_DOC WHERE 1 = 1
        <choose><when test="id != null"> AND id = #{id}</when></choose>
        <choose><when test="ownerId != null"> AND owner_id = #{ownerId}</when></choose>
        <choose><when test="version != null and version != ''"> AND version = #{version}</when></choose>
        ORDER BY
        <choose><when test="orderBy != null and orderBy != '' ">${orderBy} </when><otherwise> update_at </otherwise></choose>
        <choose><when test="sort != null ">${sort} </when></choose>
        <choose><when test="limit != null and offset != null"> LIMIT #{limit} OFFSET #{offset} </when></choose>
    </select>
    <select id="findLastDay"  resultMap="DocEntityList">
        SELECT * FROM BLOG_POST_DOC WHERE 1 = 1
        <choose><when test="id != null"> AND id = #{id}</when></choose>
        <choose><when test="ownerId != null"> AND owner_id = #{ownerId}</when></choose>
        <choose><when test="version != null and version != ''"> AND version = #{version}</when></choose>
        <choose><when test="updateAt != null"> AND update_at > (CURRENT_DATE - 1)  </when></choose>
        ORDER BY
        <choose><when test="orderBy != null and orderBy != '' ">${orderBy} </when><otherwise> update_at </otherwise></choose>
        <choose><when test="sort != null ">${sort} </when></choose>
        <choose><when test="limit != null and offset != null"> LIMIT #{limit} OFFSET #{offset} </when></choose>
    </select>
    <select id="findOne"  resultMap="DocEntity">
        SELECT * FROM BLOG_POST_DOC WHERE 1 = 1
        <choose><when test="id != null"> AND id = #{id}</when></choose>
        <choose><when test="ownerId != null"> AND owner_id = #{ownerId}</when></choose>
        <choose><when test="version != null and version != ''"> AND version = #{version}</when></choose>
        ORDER BY
        <choose><when test="orderBy != null and orderBy != '' ">${orderBy} </when><otherwise> update_at </otherwise></choose>
        <choose><when test="sort != null ">${sort} </when></choose>

        LIMIT 1;


    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO BLOG_POST_DOC (
            create_at, update_at,
            owner_id, raw, version
        )
        VALUES (
                   NOW(), NOW(), #{ownerId}, #{raw}, #{version}
               );
    </insert>

    <update id="update" useGeneratedKeys="true" keyProperty="id">
        UPDATE BLOG_POST_DOC SET
            update_at = NOW()
        <choose><when test="raw != null and raw != ''"> , raw = #{raw}</when></choose>
        <choose><when test="version != null and version != ''"> , version = #{version}</when></choose>
        WHERE id=#{id} ;
    </update>

    <delete id="delete">
        DELETE FROM BLOG_POST_DOC WHERE id=#{id} ;
    </delete>
</mapper>