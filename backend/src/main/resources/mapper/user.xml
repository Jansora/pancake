<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jansora.dao.UserDao">
    <resultMap id="UserEntity" type="com.jansora.entity.UserEntity">
        <result property="id" column="id"/>
        <result property="createAt" column="create_at"/>
        <result property="updateAt" column="update_at"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="alias" column="alias"/>
        <result property="avatar" column="avatar"/>
        <result property="description" column="description"/>
        <result property="role" column="role"/>
    </resultMap>
    <select id="count" resultType="int">
        SELECT count(1) FROM account WHERE 1 = 1
        <choose><when test="id != null"> AND id = #{id}</when></choose>
        <choose><when test="ownerId != null"> AND owner_id = #{ownerId}</when></choose>
        <choose><when test="version != null and version != ''"> AND version = #{version}</when></choose>
    </select>
    <select id="find"  resultMap="UserEntity">
        SELECT * FROM account WHERE 1 = 1
        <choose><when test="id != null"> AND id = #{id} </when></choose>
        <choose><when test="username != null and username != ''"> AND username = #{username} </when></choose>
        <choose><when test="password != null and password != ''"> AND password = #{password} </when></choose>
        <choose><when test="role != null and role != ''"> AND role = #{role} </when></choose>

        ORDER BY
        <choose><when test="orderBy != null and orderBy != '' ">${orderBy} </when><otherwise> update_at </otherwise></choose>
        <choose><when test="sort != null ">${sort </when></choose>
        <choose><when test="limit != null and offset != null"> LIMIT #{limit} OFFSET #{offset} </when></choose>
    </select>
    <select id="findOne"  resultMap="UserEntity">
        SELECT * FROM account WHERE 1 = 1
        <choose><when test="id != null"> AND id = #{id} </when></choose>
        <choose><when test="username != null and username != ''"> AND username = #{username} </when></choose>
        <choose><when test="password != null and password != ''"> AND password = #{password} </when></choose>
        <choose><when test="role != null and role != ''"> AND role = #{role} </when></choose>

        ORDER BY
        <choose><when test="orderBy != null and orderBy != '' ">${orderBy} </when><otherwise> update_at </otherwise></choose>
        <choose><when test="sort != null ">${sort} </when></choose>

        LIMIT 1;
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO ACCOUNT (
            create_at, update_at,
            alias, description, password,
            username, avatar, role
        )
        VALUES (
                   NOW(), NOW(), #{alias}, #{description}, #{password}, #{username}, #{avatar},
                   #{role}
               );
    </insert>

    <update id="update" useGeneratedKeys="true" keyProperty="id">
        UPDATE ACCOUNT SET
            update_at = NOW()
        <choose><when test="alias != null and alias != ''"> , alias = #{alias}</when></choose>
        <choose><when test="description != null and description != ''"> , description = #{description}</when></choose>
        <choose><when test="password != null and password != ''"> , password = #{password}</when></choose>
        <choose><when test="avatar != null and avatar != ''"> , avatar = #{avatar}</when></choose>
        WHERE id=#{id} ;

    </update>

    <delete id="delete">
        DELETE FROM ACCOUNT WHERE id=#{id} ;
    </delete>
</mapper>